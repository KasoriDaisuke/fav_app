<div class="tweet_area">

<%= form_tag(root_path, method: "get", class: "form-inline") do %>
<div class="form-group">
<%= select_tag "sort", options_for_select([["いいねが多い順", "many"], ["いいねが少ない順", "few"], ["ツイートが新しい順", "new"], ["ツイートが古い順", "old"]],:selected=>"many"), class: "form-control" %>
</div>
<input type="submit" class="btn btn-default" value="検索">
<div class="form-group">
  <label>ツイート検索：</label>
  <input type="text" class="form-control" placeholder="ツイート内容">
</div>
<button type="submit" class="btn btn-default">検索</button>
<% end %>

<p>今のユーザー：<%= current_user.id %></p>
<div class="tweet_list">
<% @tweets.each do |tweet| %>
 <% if tweet.fav > 0 %>
<div class="tweet">
 <p><%= tweet.tweet %></p>
 <p class= "fav_count"><%= tweet.fav %>Fav</p>
 <p><%= tweet.tweet_time %></p>
</div>
<% end %>
<% end %>
</div>

</div>